        <h3 class="white">@MvcHtmlString.Create(MINI.Resources.Owners.Accessories.PageSubTitle)</h3>
    </div>
    <img src="@Url.ContentVersioned("~/Public/img/content/partsintro-overlay.png")" />
</div>

@{ Html.RenderPartial("_InPageNav", "accessories"); }

@{
            
