            @*<li><a href="#warm-weather" data-sectionparent="#tires-wheels">@MINI.Resources.Owners.Accessories.TireWheelMenu2</a></li>*@
        </ul>

        <p class="smaller-text white">@MvcHtmlString.Create(fullRetailerMessage)</p>
