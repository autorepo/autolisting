@{
  ViewBag.Title = @MINI.Resources.Owners.Accessories.BrowserTitle;
}

@{
    List<MINI.Models.FloatingNavViewModel> model = new List<MINI.Models.FloatingNavViewModel>();
    model.Add(new MINI.Models.FloatingNavViewModel() { Label = MINI.Resources.Owners.Accessories.AccessoriesLabel  , Target = "#accessories" });
