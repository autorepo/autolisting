@{
    ViewBag.Title = MINI.Resources.Owners.Mini101.PageTitle;

    string url = "http://www.mini101.ca";
    if (MINI.App.CurrentUserLanguage.ToUpperInvariant() == "FR") {
        url = String.Concat(url, "/fr/index.html");
    }
}
<div id="mini-101" class="content-section content-offset content-indent" style="height: 800px;">
    <iframe src="@url" width="1170" height="800" frameborder="0" scrolling="no" style="margin-top:-140px;padding-top:50px;">
    </iframe>
</div>
