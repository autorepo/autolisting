@model MINI.Models.FormSubmissionViewModel
@using (Html.BeginForm("SaveServiceAppointment", "Form", FormMethod.Post, new { id = "formServiceAppointment", @class = "serviceappt-form" }))
{

    @Html.HiddenFor(x => x.OpportunityType)
    @Html.HiddenFor(x => x.RetailerNumber)
    <div id="serviceAppointment">
        <div class="alert alert-danger" style="display:none;">
            <div id="ServiceAppResultMsg">
            </div>
        </div>
        <fieldset id="fields" class="field">
            <div class="col">
                <legend>
                    <h4>@MINI.Resources.Forms.Index.PreferredRetailerLbl</h4>
                </legend>
                <div class="form-group">
                    <div class="testdrive-select required">
@{
    if (@MINI.App.CurrentRetailerSite != null){
        @Html.DropDownListFor(m => m.RetailerNumber, Model.RetailerList, MINI.Resources.Forms.Index.PreferredRetailerLbl, new { id = "ddlRetailer", @class = "form-control", @disabled = "disabled" })
    }else{
        @Html.DropDownListFor(m => m.RetailerNumber, Model.RetailerList, MINI.Resources.Forms.Index.PreferredRetailerLbl, new { id = "ddlRetailer", @class = "form-control" })
    }
}
                    </div>
                </div>
                <legend>
                    <h4>@MINI.Resources.Forms.Index.PersonalInfoTitle</h4>
                </legend>
                <div class="form-group">
                    <div class="testdrive-select required">
                        @Html.DropDownListFor(m => m.Salutation, Model.Salutations, MINI.Resources.Forms.Index.SalutationLbl, new { id = "ddlSalutation", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group required">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.FirstNameLbl })
                </div>
                <div class="form-group required">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.LastNameLbl })
                </div>
                <legend>
                    <h4>@MINI.Resources.Forms.Index.Title_Contact</h4>
                </legend>
                <div class="form-group">
                    <div class="testdrive-select required">
                        @Html.DropDownListFor(m => m.PreferredContactMethod, Model.PreferredContactMethods, MINI.Resources.Forms.Index.PreferredContactMethodLbl, new { id = "ddlPreferredContactMethod", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.HomePhoneNumber, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.HomePhoneNumberLbl })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.BusinessPhoneNumber, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.BusinessPhoneNumberLbl })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.BusinessPhoneNumberExtension, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.BusinessExtensionPhoneNumberLbl })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CellPhoneNumber, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.CellPhoneNumberLbl })
                </div>
                <div class="form-group required">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.EmailAddressLbl })
                </div>

                <div class="form-group">
                    <div class="testdrive-select required">
                        @Html.DropDownListFor(m => m.PreferredContactTime, Model.PreferredContactTimes, MINI.Resources.Forms.Index.PreferredContactTimeLbl, new { id = "ddlPreferredContactTime", @class = "form-control" })
                    </div>
                </div>

                <legend>
                    <h4>@MINI.Resources.Forms.Index.AddressInfoTitle</h4>
                </legend>
                <div class="form-group">
                    <div class="testdrive-select" style="width: 300px">
                        @foreach (var addressType in Model.AddressTypes)
                        {
                            <div class="radio-inline">
                                <label>@Html.RadioButtonFor(m => m.AddressType, addressType.Value) @addressType.Text</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.Address1Lbl })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.Address2Lbl })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.CityLbl })
                </div>
                <div class="form-group">
                    <div class="testdrive-select">
                        @Html.DropDownListFor(m => m.Province, Model.Provinces, MINI.Resources.Forms.Index.ProvinceLbl, new { id = "ddlProvince", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.PostalCodeLbl })
                </div>
            </div>
            <div class="col right-col">
                <legend>
                    <h4>@MINI.Resources.Forms.Index.VehicleServiceTitle</h4>
                </legend>
                <div class="form-group required">
                    @Html.TextBoxFor(m => m.ServiceVehicle, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.VehicleLbl })
                </div>
                <div class="form-group required">
                    @Html.TextBoxFor(m => m.CurrentServiceInterval, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.ServiceCurrentServiceIntervalReq })
                </div>
                <div class="form-group">
                    <div class="radio-inline" style="padding-left: 0;">
                        @Html.CheckBoxFor(m => m.ServiceHasYourVehicleBeenSeenServiced, new { @class = "pull-right" })
                        @Html.LabelFor(x => x.ServiceHasYourVehicleBeenSeenServiced, new { @class = "control-label pull-left", @style = "width:240px;padding-top:0;text-align:left;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="radio-inline" style="padding-left: 0;">
                        @Html.CheckBoxFor(m => m.ServiceWhileYourVehicleIsBeingServiced, new { @class = "pull-right" })
                        @Html.LabelFor(x => x.ServiceWhileYourVehicleIsBeingServiced, new { @class = "control-label pull-left", @style = "width:240px;padding-top:0;text-align:left;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Comments, new { @class = "form-control generalinquory-input", @placeholder = MINI.Resources.Forms.Index.CommentsLbl, @rows = "12" })
                </div>
                <div class="InfoLbl">
                    @MINI.Resources.Forms.Index.IWouldLikeToReceiveLbl
                </div>
                <div class="form-group">
                    <div class="radio-inline" style="padding-left: 0;">
                        @Html.CheckBoxFor(m => m.ReceiveEvents, new { @class = "pull-right" })
                        @Html.LabelFor(x => x.ReceiveEvents, new { @class = "control-label pull-left", @style = "width:240px;padding-top:0;text-align:left;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="radio-inline" style="padding-left: 0;">
                        @Html.CheckBoxFor(m => m.ReceivePromotions, new { @class = "pull-right" })
                        @Html.LabelFor(x => x.ReceivePromotions, new { @class = "control-label pull-left", @style = "width:240px;padding-top:0;text-align:left;" })
                    </div>
                </div>
                <div class="form-group" style="display:none">
                    <div class="radio-inline" style="padding-left: 0;">
                        @Html.CheckBoxFor(m => m.CommercialEmailOptIn, new { @class = "pull-right" }) @Html.LabelFor(x => x.CommercialEmailOptIn, new { @class = "control-label pull-left", @style = "width:240px;padding-top:0;text-align:left;" })
                    </div>
                </div>
                <button class="btn btn-primary btn-service-app gradient-grey shadow" type="submit"> <img src="@Url.ContentVersioned("~/Public/img/transp-shadow-double-chevron.png")" width="16" height="12" /> @MINI.Resources.Forms.Index.SubmitLbl</button>
                <div class="reqmsg">@Html.Raw(MINI.Resources.Forms.Index.AllFieldsMarkedRequired)</div>

            </div>
        </fieldset>
    </div>
}