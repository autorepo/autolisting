@model MINI.Models.FleetFormSubmissionViewModel
<div class="modal fade" id="fleetFormModal" tabindex="-1" role="dialog" aria-labelledby="fleetFormModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><div class="close-text">@MINI.Resources.Forms.Index.CloseLbl</div>&times;</button>
                <h4 class="modal-title">
                    @MvcHtmlString.Create(MINI.Resources.Shopping.MINIFleet.PageTitle)</h4>
            </div>
            <div class="modal-body" style="padding: 20px;">
                @using (Html.BeginForm("SaveFleetForm", "Form", FormMethod.Post, new { id = "formSaveFleetForm" }))
                {
                    <div class="alert alert-danger" style="display:none;">
                        <div id="ResultMsg">
                        </div>
                    </div>
                    <fieldset id="fields">
                        <div class="col">
                            <div class="col">
                                <legend>
                                    <h4>
                                        @MvcHtmlString.Create(MINI.Resources.Shopping.MINIFleet.ApplicationDriverTitle)</h4>
                                </legend>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.CompanyNameLbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.ApplicantName, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.ApplicantNameLbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.Address1Lbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.Address2Lbl })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.CityLbl }) *
                                </div>
                                <div class="form-group">
                                    <div class="testdrive-select">
                                        @Html.DropDownListFor(m => m.Province, Model.Provinces, MINI.Resources.Forms.Index.ProvinceLbl, new { id = "ddlProvince", @class = "form-control" }) *
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.PostalCodeLbl }) *
                                </div>
                            </div>
                        </div>
                        <div class="col" style="margin-top: 20px">
                            <div class="col">
                                <legend>
                                    <h4>
                                        @MvcHtmlString.Create(MINI.Resources.Shopping.MINIFleet.FleetManagerForApplicantTitle)</h4>
                                </legend>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.FleetHRManager, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.FleetHRManagerLbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.PhoneNumberLbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.EmailAddressLbl }) *
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.NumberOfVehicleInFleet, new { @class = "control-label pull-right", @style = "padding-top:0;text-align:left;margin-left: 0px;" })
                                    @Html.TextBoxFor(m => m.NumberOfVehicleInFleet, new { @class = "form-control generalinquory-input", @placeholder = @MINI.Resources.Shopping.MINIFleet.NumberOfVehicleTextBox }) *
                                </div>
                            </div>
                            <div class="pull-left">
                                <br />
                                @Html.ButtonLink(HtmlHelperExtensions.ButtonLinkType.SUBMIT, @MINI.Resources.Shopping.MINIFleet.Submit, null, null)
                                <div class="reqmsg">@Html.Raw(MINI.Resources.Forms.Index.AllFieldsMarkedRequired)</div>
                            </div>
                        </div>
                    </fieldset>
                }
                <div class="modal-footer">
                @{Html.RenderPartial("_FormFooter");}
                </div>
            </div>
        </div>
