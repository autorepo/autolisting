            <h2 class="with-subtitle">@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.PartsAccessoriesTitle)</h2>
            <h2>@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.PartsAccessoriesSubTitle)</h2>
