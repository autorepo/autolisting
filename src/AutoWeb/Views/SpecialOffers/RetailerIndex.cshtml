        </div>
    </div>

    <div id="retailer-partsaccessories-original" class="retailer-specialoffer-item left-offset left-indent">
        <div class="box white">
            <h2 class="with-subtitle">@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.PartsAccessoriesOriginalTitle)</h2>
            <h2>@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.PartsAccessoriesOriginalSubTitle)</h2>
            <p>@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.PartsAccessoriesOrginalBody)</p>
            <a href="#serviceAppointmentModal" data-toggle="modal" data-retailer-number-value="@MINI.App.CurrentRetailerSite.Retailer.InternalRetailerID" class="btn btn-md btn-primary gradient-grey shadow"><img src="@Url.ContentVersioned("~/Public/img/transp-shadow-double-chevron.png")" width="16" height="12" /> @MINI.Resources.SpecialOffers.RetailerIndex.ServiceActionLbl</a>
        </div>
    </div>

    <div id="retailer-financial" class="retailer-specialoffer-item left-offset left-indent">
        <div class="box brown">
            <h2 class="with-subtitle">@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.FinancialTitle)</h2>
            <h2>@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.FinancialSubTitle)</h2>
            <p>@MvcHtmlString.Create(MINI.Resources.SpecialOffers.RetailerIndex.FinancialBody)</p>
            <a href="@Url.Action("index", "static", new { @lang = MINI.App.CurrentUserLanguage, pathInfo = "shopping/financial-services" })" class="btn btn-md btn-primary gradient-grey shadow"><img src="@Url.ContentVersioned("~/Public/img/transp-shadow-double-chevron.png")" width="16" height="12" /> @MINI.Resources.SpecialOffers.RetailerIndex.FinancialActionLbl</a>
