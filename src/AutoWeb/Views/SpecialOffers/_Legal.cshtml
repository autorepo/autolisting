@model MINI.Models.SpecialOffersDisplayViewModel
<!-- Modal -->
<div class="modal fade specialOffersLegal" id="legal-@Model.CACode" tabindex="-1" role="dialog" aria-labelledby="vehicleFeaturesLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header clearfix">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Legal</h4>
      </div>
      <div class="modal-body" style="text-align:left;padding:20px;">
        @MvcHtmlString.Create(PriceHelpers.GetLegalText(Model))
      </div>
    </div>
  </div>
</div>